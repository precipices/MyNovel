<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!-- 指定工作空间，要与接口名相同，源代码没有去看，猜测应该是通过"这里的namespace.下边方法的id"来定位方法的 -->
<mapper namespace="fun.wk.mapper.UserMapper">
<!-- 	根据用户名查找用户 -->
	<select id="getUserByName" parameterType="String"
		resultType="fun.wk.entity.User">
		SELECT * FROM user WHERE username = #{name}
	</select>

	<!-- 根据用户Id查找用户 -->
	<select id="getUserById" parameterType="int" resultType="fun.wk.entity.User">
		SELECT ID,USERNAME,PASSWORD,AGE FROM USER WHERE ID=#{0}
	</select>
	<!-- insert user -->
	<insert id="insert" parameterType="fun.wk.entity.User">
		INSERT INTO USER(ID,USERNAME,PASSWORD,AGE)
		VALUES(#{id},#{username},#{password},#{age});
	</insert>

	<!-- update user -->
	<update id="update" parameterType="fun.wk.entity.User">
		UPDATE USER SET USERNAME=#{username} , PASSWORD=#{password} , AGE = #{age}
		WHERE ID=#{id}
	</update>


	<!-- delete user -->
	<delete id="delete" parameterType="int">
		DELETE FROM USER WHERE ID=#{0}
	</delete>
</mapper>